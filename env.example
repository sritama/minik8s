# Minik8s Configuration
# Copy this file to .env and modify as needed

# Server Configuration
MINIK8S_PORT=8080
MINIK8S_HOST=0.0.0.0

# Store Configuration
MINIK8S_STORE_TYPE=memory
MINIK8S_ETCD_ENDPOINTS=localhost:2379
MINIK8S_STORE_PREFIX=/minik8s
MINIK8S_ENABLE_FALLBACK=true

# Logging Configuration
MINIK8S_LOG_LEVEL=info
MINIK8S_LOG_JSON=false

# Development Configuration
MINIK8S_DEV_MODE=true 